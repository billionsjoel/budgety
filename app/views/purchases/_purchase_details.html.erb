<div id="<%= dom_id category %>">
  <div class="card my-1 shadow">
    <div class="container py-1 px-1">
      <div class="row">
        <div class='col-4'>
          <%= image_tag category.icon, alt: category.name, style: 'width: 100px; height: 100px;' %>
        </div>

        <div class="col-4 text-secondary my-3">
            <h5 class=" fs-6">
              <%=purchase.name%>
            </h5>
          </div>
      </div>

      <div class="d-flex justify-content-between py-3 px-2 text-secondary">
        <span>updated on</span>
        <span><h6><%=purchase.updated_at.strftime("%d-%m-%y")%></h6></span>
      </div>
       <div class="d-flex justify-content-between py-3 px-2 text-secondary">
        <span>time</span>
        <span><h6><%=purchase.updated_at.strftime("%I:%M %P")%></h6></span>
      </div>
      <div class="d-flex justify-content-between py-3 px-2">
          <span>Total amount</span>
          <span>$<%=purchase.amount%></span>
      </div>
    </div>

</div>
