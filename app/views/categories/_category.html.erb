<div id="<%= dom_id category %>">
  <div class="card my-1 shadow">
    <div class="container py-1 px-1">
      <div class="row">
        <div class="col-4">
          <%= image_tag "https://images.unsplash.com/photo-1508921912186-1d1a45ebb3c1?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2432&q=80", alt: category.name, style: 'width: 100px; height: 100px;'%>
        </div>
          <div class="card-body col-6">
            <div class="card-text container">
            <div class="row">
                <div class="col-6 text-primary">
                  <h5 class="card-title">
                    <%=category.name%>
                  </h5>
                </div>
                <div class="col-6">
                  $<span><%=category.total%></span>
                </div>
                <div class="col-12 fw-lighter text-muted">
                  <span class><%=category.updated_at.strftime("%d %b %Y")%></span>
                </div>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>

</div>