<div class="p-2">
<%= form_with(model: category) do |f| %>
    <div class=" b w-100 d-flex justify-content-between align-items-center bg-primary text-white">
      <%= link_to  categories_path, id: 'back_to_home' do %>
        <i class="fa fa-arrow-left text-white ms-4" aria-hidden="true"></i>
      <%end%>

      <p class="mb-0 p-4">New Category</p>
      <%= f.submit "Submit", class:'btn btn-sm me-4 btn-success rounded-1 text-white',data:{turbo:false} %>
    </div>
    <%=render 'error_messages', model: category %>

    <%= f.text_field :name, placeholder: 'name', class: 'form-control rounded-0 name' %>

    <%= f.select :icon, ['Toyota', 'Chevrolet', 'Marcedes', 'Volkswagen'], {}, {class: "form-control form-select"} %>

<% end %>
</div>